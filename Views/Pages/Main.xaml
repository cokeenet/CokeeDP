<ui:UiPage
    x:Class="CokeeDP.Views.Pages.Main" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CokeeDP.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" Title="Main" d:DesignHeight="432" d:DesignWidth="794"
    Loaded="OnLoaded" Scrollable="True" mc:Ignorable="d">

    <Grid Margin="5,0,5,0">
        <Grid.ColumnDefinitions />
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0" Grid.Column="0" FontSize="20" Text="CokeeDP 设置" />
        <ui:InfoBar Content="warn" />
        <ui:CardControl
            Grid.Row="1" Margin="0,10,5,0" VerticalAlignment="Top" Icon="Wallpaper24">
            <ui:CardControl.Header>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13" FontWeight="Medium" Text="启用 Bing 每日壁纸" />
                    <TextBlock
                        FontSize="12" Opacity="0.7" Text="禁用则加载本地壁纸" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:ToggleSwitch
                x:Name="BingWappSwitch" Checked="OnSwitchChecked" IsChecked="True" Tag="bing" />
        </ui:CardControl>
        <ui:CardControl
            Grid.Row="2" Margin="0,10,5,0" VerticalAlignment="Top" Icon="Wallpaper24">
            <ui:CardControl.Header>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13" FontWeight="Medium" Text="加载4K清晰度 (UHD)的壁纸" />
                    <TextBlock
                        FontSize="12" Opacity="0.7" Text="禁用则加载1080P清晰度" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:ToggleSwitch
                x:Name="UHDModeSwitch" Checked="OnSwitchChecked" IsChecked="True" Tag="uhd" />
        </ui:CardControl>
        <ui:CardControl
            Grid.Row="3" Margin="0,10,5,0" VerticalAlignment="Top" Icon="MusicNote2Play20">
            <ui:CardControl.Header>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13" FontWeight="Medium" Text="听力播放器目录" />
                    <TextBlock
                        FontSize="12" Opacity="0.7" Text="绝对路径" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:TextBox
                Width="551" Tag="audioDir" TextChanged="TextBodHandler" />
        </ui:CardControl>
        <ui:CardControl
            Grid.Row="4" Margin="0,10,5,0" VerticalAlignment="Top" Icon="MusicNote2Play20">
            <ui:CardControl.Header>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13" FontWeight="Medium" Text="听力播放器目录" />
                    <TextBlock
                        FontSize="12" Opacity="0.7" Text="绝对路径" />
                </StackPanel>
            </ui:CardControl.Header>
            <ComboBox Width="145">
                <ComboBoxItem Content="文学" Tag="d" />
                <ComboBoxItem Content="影视" Tag="h" />
                <ComboBoxItem Content="诗词" Tag="i" />
                <ComboBoxItem Content="网易云" Tag="j" />
                <ComboBoxItem Content="哲学" Tag="k" />
                <ComboBoxItem Content="动画" Tag="a" />
                <ComboBoxItem Content="网络" Tag="f" />
                <ComboBoxItem Content="其他" Tag="g" />
                <ComboBoxItem Content="抖机灵" Tag="l" />
            </ComboBox>
        </ui:CardControl>
        <ui:CardControl
            Grid.Row="5" Margin="0,10,5,0" VerticalAlignment="Top" Icon="DarkTheme24">
            <ui:CardControl.Header>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13" FontWeight="Medium" Text="切换暗色主题" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:ToggleSwitch
                x:Name="DarkModeSwitch" HorizontalAlignment="Center" Checked="OnSwitchChecked" IsChecked="True" Tag="dark" />
        </ui:CardControl>
        <ui:Snackbar
            x:Name="snackbar" Grid.Row="5" Grid.RowSpan="7" Width="370" Height="68"
            Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Grid>
</ui:UiPage>