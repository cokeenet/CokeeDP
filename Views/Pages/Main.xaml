<ui:UiPage x:Class="CokeeDP.Views.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CokeeDP.Views.Pages"
      mc:Ignorable="d" Scrollable="True"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Margin="5,10,255,410"
            FontSize="20"
            Text="CokeeDP 设置" />
        <StackPanel Margin="0,45,0,0">
            <ui:ToggleSwitch
                    x:Name="EnableGetUpdate"
                    Margin="0,7"
                    Click="EnableGetUpdate_Click"
                    Content="获取更新"
                    ToolTip="启动后自动获取更新（建议开启）" />
            <ui:ToggleSwitch
                    x:Name="UseDarkTheme"
                    Margin="0,7"
                    Click="UseDarkTheme_Click"
                    Content="使用暗黑主题"
                    ToolTip="使用暗黑主题（部分控件可能不兼容）" />
            <ui:ToggleSwitch
                    x:Name="ThemeFollowSystem"
                    Margin="0,7"
                    Click="ThemeFollowSystem_Click"
                    Content="主题跟随系统"
                    ToolTip="Win10及以上的版本中，主题颜色自动跟随&quot;设置&gt;颜色&quot;调整" />
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock
                    Margin="0,7,0,5"
                    Text="最大缓存行数"
                    ToolTip="控制台的最大缓存行数（建议大于50）" />
            <ui:NumberBox
                    x:Name="MaxCacheLines"
                    HorizontalAlignment="Left"
                    Icon="TextFirstLine24"
                    IntegersOnly="True"
                    Max="250"
                    Min="0"
                    Step="1"
                    TextChanged="MaxCacheLines_TextChanged"
                    ToolTip="控制台的最大缓存行数（建议大于50）"
                    Value="100" />
        </StackPanel>
    </Grid>
</ui:UiPage>
