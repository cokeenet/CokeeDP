<Window
    x:Class="CokeeDP.Views.Windows.SettingsWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CokeeDP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:pages="clr-namespace:CokeeDP.Views.Pages"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern" Title="Settings" Width="995"
    Height="595"
    ui:ThemeManager.IsThemeAware="True"
     ui:TitleBar.ExtendViewIntoTitleBar="True"
     ui:WindowHelper.SystemBackdropType="Mica"
     ui:TitleBar.IsBackButtonVisible="False"
     ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:TitleBarControl
            Title="CokeeDP Settings" Grid.Row="0" HorizontalAlignment="Stretch" Icon="pack://application:,,,/Image/hd1.jpg" />
        <Grid Grid.Row="1" Margin="3,3,3,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:NavigationView
                x:Name="RootNavigation" Grid.Column="0" Margin="6,0,6,0">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem
                        Content="设置" Icon="Home24" />
                    <ui:NavigationViewItemSeparator />
                    <ui:NavigationViewItem Content="定时任务" Icon="ClockAlarm32" />
                </ui:NavigationView.MenuItems>
                <ui:NavigationView.FooterMenuItems>
                    <ui:NavigationViewItem
                        Content="深色模式" Icon="DarkTheme24" MouseDown="DarkMode" />
                    <ui:NavigationViewItem
                        Content="关于" Icon="Info24">
                    </ui:NavigationViewItem>
                </ui:NavigationView.FooterMenuItems>
            </ui:NavigationView>
            <Border
                Grid.Column="1" Margin="0" CornerRadius="8,0,0,0">
                <Frame x:Name="RootFrame" Margin="4,8" ScrollViewer.CanContentScroll="True" NavigationUIVisibility="Visible" />
            </Border>
        </Grid>

        <!--<ui:Sn
            x:Name="snackbar" Grid.Row="1" Width="370" Height="68" Margin="0,0,0,20"
            HorizontalAlignment="Center" VerticalAlignment="Bottom" />-->
    </Grid>
</Window>